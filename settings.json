// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // Don't allow Zed Industries to collect anonymous usage data
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // Tweaks
  "remove_trailing_whitespace_on_save": false,
  "ensure_final_newline_on_save": true,

  // User Interface
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "My Dracula"
  },

  // Features
  "git": {
    // https://zed.dev/docs/configuring-zed#git
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "position": "right"
    }
  },

  // Panels
  "project_panel": {
    // https://zed.dev/docs/configuring-zed#project-panel
    "default_width": 225,
    "button": true,
    "dock": "left",
    "git_status": true
  },
  "notification_panel": {
    "default_width": 200,
    "dock": "right"
  },
  "assistant": {
    // https://zed.dev/docs/assistant-panel
    "version": "1",
    "provider": {
      "default_model": "claude-3-5-sonnet-20240620",
      "name": "anthropic"
    }
  },
  "terminal": {
    // https://zed.dev/docs/configuring-zed#terminal
    "shell": {
      "with_arguments": {
        "program": "C:\\Windows\\System32\\wsl.exe",
        "args": ["-d", "Debian", "bash", "--login"]
      }
    },
    "copy_on_select": true
  },
  "tabs": {
    // https://zed.dev/docs/configuring-zed#editor-tabs
    "show_icons": true,
    "git_status": true,
    "close_position": "right"
  }
}
